{
  "name": "hb-file-processing",
  "version": "1.0.0",
  "description": "Serverless functions for file processing",
  "scripts": {
    "invoke:processUploadDemoEvent": "serverless invoke local -f processUploadedFile -p demo-event.json",
    "deploy": "DOTENV_CONFIG_PATH=../.env node -r dotenv/config node_modules/serverless/bin/serverless.js deploy",
    "deploy:full": "npm run deploy && ./scripts/configure-s3-cors.sh",
    "configure:cors": "./scripts/configure-s3-cors.sh",
    "offline": "DOTENV_CONFIG_PATH=../.env node -r dotenv/config node_modules/serverless/bin/serverless.js offline"
  },
  "devDependencies": {
    "dotenv": "^16.6.1",
    "serverless-offline": "^13.0.0",
    "serverless-python-requirements": "^6.0.0"
  }
}
